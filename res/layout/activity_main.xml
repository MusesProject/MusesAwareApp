<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="442dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/open_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="public asset"
            android:text="@string/open" />

        <Button
            android:id="@+id/open_conf_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="confidential asset"
            android:text="@string/open_confidential" />

        <Button
            android:id="@+id/open_asset_with_sensitivity_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="asset with sensitivity"
            android:text="@string/open_asset_with_sensitivity" />

        <Button
            android:id="@+id/send_virus_event_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="virus event"
            android:text="@string/send_virus_event" />

        <Button
            android:id="@+id/send_email_event_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="email event"
            android:text="@string/send_email_event" />

        <Button
            android:id="@+id/send_email_with_attachment_event_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="email attachment event"
            android:text="@string/send_email_with_attachment" />
        
        <Button
            android:id="@+id/install_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/install" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/result_label_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textColor="#663399"
            android:textSize="60dp" />

        <TextView
            android:id="@+id/result_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="35dp" />
    </LinearLayout>

</LinearLayout>